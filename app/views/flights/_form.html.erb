<%= form_for @flight do |f| %>
  <div>
    <%= f.label :flight_number%>
    <%= f.text_field :flight_number, :required=>'true' %>
  </div>

  <div>
    <%= f.label :origin%>
    <%= f.text_field :origin, :required=>'true' %>
  </div>

  <div>
    <%= f.label :destination%>
    <%= f.text_field :destination, :required=>'true' %>
  </div>

  <div>
    <%= f.label :date%>
    <%= f.text_field :date, :required=>'true' %>
  </div>


  <div>
    <%= f.label :airplane_id%>
    <%= f.select :airplane_id, Airplane.pluck(:model, :id), :required=>'true' %>
  </div>

  <%= f.submit %>
<% end %>
